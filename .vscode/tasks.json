{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "g++-12",
			"command": "/usr/bin/g++-12",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-O2",
				"-DNDEBUG",
				"-pedantic-errors",
				"-Wall",
				"-Weffc++",
				"-Wextra",
				"-Wconversion",
				"-Wsign-conversion",
				"-Werror",
				"-std=c++20",
				"${fileDirname}/**.cpp",
				"-o",
				"${fileDirname}/app"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/g++-12"
		},
		{
			"type": "cppbuild",
			"label": "Clang-17",
			"command": "/usr/bin/clang++-17",
			"args": [
				"-fdiagnostics-color=always",
				"-g",
				"-O2",
				"-DNDEBUG",
				"-pedantic-errors",
				"-Wall",
				"-Weffc++",
				"-Wextra",
				"-Wconversion",
				"-Wsign-conversion",
				"-Werror",
				"-std=c++20",
				"${fileDirname}/**.cpp",
				"-o",
				"${fileDirname}/app"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang++-17"
		}
	]
}